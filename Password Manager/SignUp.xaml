<Window x:Name="SignUpPagemain" x:Class="Password_Manager.SignUp"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Password_Manager"
        mc:Ignorable="d"
        WindowStartupLocation="Manual" 
        Left="450" Top="100"
        Title="MainWindow" Height="450" Width="300" AllowsTransparency="True" WindowStyle="None" MouseDown="Window_MouseDown" ResizeMode="NoResize">
    <Window.Background>
        <SolidColorBrush Opacity="0.95" Color="#FF14121A"/>
    </Window.Background>
    <Grid>
        <StackPanel>
            <Grid Margin="0 0 0 30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="buttonclose" Content="×" Grid.Column="1" Margin="100,-4,0,-9" Click="Buttonclose" Width="50" FontSize="30" FontFamily="Calibri Light" Background="#0014121A" HorizontalAlignment="Left" BorderBrush="#FFA3A3A3" BorderThickness="0" Foreground="White" Opacity="0.95" Height="41" VerticalAlignment="Top"/>
                <Button x:Name="buttonminimise" Content="-" Grid.Column="1" Margin="44,-4,0,-9" Click="Buttonminimise" Width="50" FontSize="30" FontFamily="Calibri Light" Background="#0014121A" HorizontalAlignment="Left" BorderBrush="#FFA3A3A3" BorderThickness="0" Foreground="White" Height="41" Opacity="0.95" />
            </Grid>
            <Grid>
                <Label Content="CREATE AN ACCOUNT" Foreground="White" Margin="0,4,0,26" HorizontalContentAlignment="Center" FontFamily="Corbel Light" FontSize="15"/>
                <Rectangle Width="33"  Fill="#FF37F3AE" Margin="125,31,125,24" Height="3"/>
            </Grid>
            <Grid Height="72">
                <Label Content="Create Username" Margin="0,0,0,0"  HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Corbel Light" Width="116"/>
                <TextBox x:Name="namecreate" Text="" Margin="50,32,50,15" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="200" FontFamily="Century Gothic"/>
            </Grid>
            <Grid Height="72">
                <Label Content="Your Email" Margin="0,0,0,0"  HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Corbel Light"/>
                <TextBox x:Name="emailcreate" Text="" Margin="50,32,50,15" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="200" FontFamily="Century Gothic"/>
            </Grid>
            <Grid>
                <Label Content="Your Password" Margin="0,-3,0,17.333"  HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Corbel Light"/>
                <TextBox x:Name="passwordcreate" Text="" Margin="50,27,50,19.333" VerticalContentAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Height="25" Width="200" FontFamily="Century Gothic"/>
            </Grid>
            <Grid>
                <Button x:Name="buttonsignup" Content="Sign Up" Click="Buttonsignup" Width="50" Margin="199,0,51,-0.333" BorderThickness="0" Height="20" Background="#FF37F3AE" Foreground="Black" FontFamily="Calibri Light"/>
            </Grid>
            <Grid>
                <Label Content="◀ Return To Sign In" PreviewMouseDown="Buttonreturnlogin" Margin="0,40,0,0"  HorizontalAlignment="Center" Foreground="White" FontSize="15" FontFamily="Corbel Light"/>
            </Grid>




        </StackPanel>
    </Grid>
</Window>
